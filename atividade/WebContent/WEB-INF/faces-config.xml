<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">

	<managed-bean>
		<managed-bean-name>paginaPrincipalBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.PaginaPrincipalBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>menuBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.MenuBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>pacienteBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.PacienteBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>clinicaBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.ClinicaBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>leitoBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.LeitoBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>leitoInternacaoBean</managed-bean-name>
		<managed-bean-class>br.com.atividade.bean.LeitoInternacaoBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>principalMenu</from-outcome>
			<to-view-id>/pages/principalMenu.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>clinicaPesquisa</from-outcome>
			<to-view-id>/pages/clinicaPesquisa.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>leitoInterncaoPesquisa</from-outcome>
			<to-view-id>/pages/leitoInternacaoPesquisa.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>leitoPesquisa</from-outcome>
			<to-view-id>/pages/leitoPesquisa.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>pacientePesquisa</from-outcome>
			<to-view-id>/pages/pacientePesquisa.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>relatorio</from-outcome>
			<to-view-id>/pages/relatorio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>sobre</from-outcome>
			<to-view-id>/pages/sobre.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
